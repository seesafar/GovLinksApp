// scripts/hash-password.js
const bcrypt = require("bcryptjs");

const plain = process.argv[2];

if (!plain) {
  console.error("❌ استخدم الصيغة التالية:");
  console.error('   node scripts/hash-password.js "كلمة_المرور"');
  process.exit(1);
}

const saltRounds = 10;
const hash = bcrypt.hashSync(plain, saltRounds);

console.log("\n✅ Copy this line to your .env file:");
console.log(`ADMIN_PANEL_KEY_HASH=${hash}\n`);
